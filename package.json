{
  "name": "server-monitor-mcp",
  "version": "1.0.0",
  "description": "MCP Server for monitoring Ubuntu server resources and Docker services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop server-monitor-mcp",
    "pm2:restart": "pm2 restart server-monitor-mcp",
    "pm2:logs": "pm2 logs server-monitor-mcp",
    "docker:build": "docker build -t server-monitor-mcp .",
    "docker:run": "docker run -d --name server-monitor-mcp -p 8300:8300 server-monitor-mcp"
  },
  "keywords": [
    "mcp",
    "server-monitoring",
    "docker",
    "ubuntu",
    "nodejs"
  ],
  "author": "isaack",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "dockerode": "^4.0.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.21.20",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.43",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
