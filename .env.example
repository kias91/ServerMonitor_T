# MCP 서버 환경 변수 설정

# 서버 포트
MCP_PORT=3000

# 노드 환경
NODE_ENV=production

# 로그 레벨
LOG_LEVEL=info

# Docker 소켓 경로 (기본값)
DOCKER_SOCKET_PATH=/var/run/docker.sock

# 모니터링 간격 (초)
MONITORING_INTERVAL=60

# 도메인 설정
DOMAIN=podo-life.co.kr

# SSL 설정 (HTTPS 사용시)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
